{
    "theme" : "ayu-light",

    "editor.font_family" : "Roboto Mono",
    "editor.font_size" : 7.5,
    "editor.tab_width" : 8,
    "editor.indent_tabs" : true,
    "editor.line_padding" : 1,

    "gutter.padding" : 12,
    "gutter.font_scale" : 0.9,

    "prompt.padding_vertical" : 4,
    "prompt.padding_horizontal" : 4,

    "completion.padding_vertical" : 2,
    "completion.padding_horizontal" : 4,
    "completion.line_padding" : 1,
    "completion.annotation" : {
        "path.file" : "",
        "path.directory" : ""
    },
    "completion.language_server.root_markers" : [ ".git" ],

    "language" : {
        "c" : {
            "completion.language_server" : {
                "executable" : "clangd",
                "root_markers" : [ "compile_commands.json" ]
            }
        },
        "cpp" : {
            "completion.language_server" : {
                "executable" : "clangd",
                "root_markers" : [ "compile_commands.json" ]
            }
        },

        "python" : {
            "editor.tab_width" : 4,
            "editor.indent_tabs" : false
        },

        "rust" : {
            "editor.tab_width" : 4,
            "editor.indent_tabs" : false,
            "completion.language_server" : {
                "executable" : "rls"
            }
        }
    }
}
